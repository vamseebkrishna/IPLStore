@model IPLStore.Client.Models.ForgotPasswordViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-4" style="max-width: 500px;">
    <h2 class="text-center">Forgot Password</h2>

    <form asp-action="ForgotPassword" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-3">@ViewBag.Message</div>
    }

    @if (ViewBag.ResetLink != null)
    {
        <div class="alert alert-info mt-3">
            <strong>Reset Link (for testing):</strong><br />
            <a href="@ViewBag.ResetLink">@ViewBag.ResetLink</a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
