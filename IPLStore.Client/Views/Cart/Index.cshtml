@model IPLStore.Client.Models.Dto.CartDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Your Cart";
}

<h2 class="mt-3 mb-3">Your Cart</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Browse Products</a>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Franchise</th>
                <th>Type</th>
                <th>Unit Price</th>
                <th>Qty</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.FranchiseName</td>
                    <td>@item.Type</td>
                    <td>₹@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>₹@item.LineTotal</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <h4>Total: ₹@Model.TotalAmount</h4>

        <div class="d-flex gap-2">
            <form asp-controller="Cart" asp-action="Clear" method="post">
                <button class="btn btn-outline-danger">Clear Cart</button>
            </form>

            <form asp-controller="Orders" asp-action="Checkout" method="post">
                <button class="btn btn-success">Checkout</button>
            </form>
        </div>
    </div>
}
