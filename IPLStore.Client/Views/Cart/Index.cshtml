@model IEnumerable<IPLStore.Core.Entities.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (TempData["Error"] != null)
{
    <div style="color: red;">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Franchise</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal total = 0;
            }
            @foreach (var item in Model)
            {
                var price = item.Product?.Price ?? 0;
                var subtotal = price * item.Quantity;
                total += subtotal;
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Product?.Franchise</td>
                    <td>@item.Quantity</td>
                    <td>@price</td>
                    <td>@subtotal</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total: @total</h4>

    <form asp-action="Checkout" method="post">
        <button type="submit">Checkout</button>
    </form>
}

<br />
<a asp-controller="Products" asp-action="Index">Continue Shopping</a> |
