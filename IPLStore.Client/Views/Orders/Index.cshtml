@model IEnumerable<IPLStore.Application.DTOs.OrderDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Order History";
}

<h2 class="mt-3 mb-3">Order History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no orders yet.</div>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Start Shopping</a>
}
else
{
    @foreach (var order in Model)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">

                <h5>Order #@order.Id</h5>
                <p class="text-muted">Placed on: @order.OrderDate.ToString("MMM dd, yyyy - hh:mm tt")</p>

                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Franchise</th>
                            <th>Type</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in order.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.FranchiseName</td>
                                <td>@item.Type</td>
                                <td>@item.Quantity</td>
                                <td>₹@item.Price</td>
                                <td>₹@item.LineTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <h4>Total: ₹@order.TotalAmount</h4>

            </div>
        </div>
    }
}
