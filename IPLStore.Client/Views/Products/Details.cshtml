@model IPLStore.Application.DTOs.ProductDetailsDto
@{
    Layout = "_Layout";
    ViewData["Title"] = @Model.Name;
}

<div class="container mt-4" style="max-width: 700px;">
    <div class="card shadow-sm">
        <div class="card-body">

            <h2>@Model.Name</h2>
            <h5 class="text-muted">@Model.FranchiseName</h5>
            <p class="text-secondary">@Model.Type</p>

            <h4 class="text-success">₹@Model.Price</h4>

            <p class="mt-3">@Model.Description</p>

            <form asp-controller="Cart" asp-action="Add" method="post" class="mt-4">
                <input type="hidden" name="productId" value="@Model.Id" />

                <label class="form-label">Quantity</label>
                <input type="number" name="quantity" class="form-control mb-3" value="1" min="1" />

                <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Products" asp-action="Index">← Back to Products</a>
    </div>
</div>
