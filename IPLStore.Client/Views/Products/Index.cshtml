@model IEnumerable<IPLStore.Core.Entities.Product>

@{
    ViewData["Title"] = "IPL Store - Products";
}

<h2>IPL Store - Products</h2>

<form method="get" class="mb-3">
    <input type="text" name="name" placeholder="Search by name" value="@ViewContext.HttpContext.Request.Query["name"]" />
    <input type="text" name="type" placeholder="Type (Jersey, Cap, Flag...)" value="@ViewContext.HttpContext.Request.Query["type"]" />
    <input type="text" name="franchise" placeholder="Franchise (CSK, MI, RCB...)" value="@ViewContext.HttpContext.Request.Query["franchise"]" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Franchise</th>
            <th>Type</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Franchise</td>
                <td>@p.Type</td>
                <td>@p.Price</td>
                <td>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@p.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Cart" asp-action="Index">View Cart</a> |
<a asp-controller="Orders" asp-action="Index">Order History</a>
